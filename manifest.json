{
  "manifest_version": 3,
  "name": "Simplifier",
  "version": "1.0.0",
  "action": { "default_popup": "popup.html" },
  "host_permissions": ["<all_urls>"],
  "content_scripts":[
    {
      "js":["src/content/content.tsx"],
      "matches":["<all_urls>"]
    }
  ],
  "permissions": [
      "activeTab",
      "scripting",
      "tabs",
      "storage"
  ],
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  }

}